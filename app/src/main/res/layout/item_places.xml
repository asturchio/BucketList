<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_places_icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="12dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/image_view_places_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_background" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_view_places_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/card_view_places_icon_container"
        android:layout_toEndOf="@id/card_view_places_icon_container"
        android:fontFamily="sans-serif-medium"
        android:textColor="#222222"
        android:textSize="18sp"
        tools:text="The Place Title" />

    <TextView
        android:id="@+id/text_view_places_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_places_title"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/card_view_places_icon_container"
        android:textColor="#888888"
        android:textSize="14sp"
        tools:text="This will be our description of the place" />



</RelativeLayout>


